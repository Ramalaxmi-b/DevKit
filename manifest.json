{
  "manifest_version": 3,
  "name": "Devkit",
  "version": "1.0",
  "description": "Window resizer is useful to resize your window",
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "http://*/",
    "https://*/"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "logo-16x16.png",
      "32": "logo-32x32.png",
      "512": "logo-512x512.png"
    }
  },
  "icons": {
    "16": "logo-16x16.png",
    "32": "logo-32x32.png",
    "512": "logo-512x512.png"
  }
}
